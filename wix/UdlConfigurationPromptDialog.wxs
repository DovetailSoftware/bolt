<?xml version='1.0' encoding='windows-1252'?>
<Wix xmlns="http://schemas.microsoft.com/wix/2003/01/wi">
  <Fragment>
    <UI>
      <Dialog Id="UdlConfigurationPromptDialog" Width="370" Height="270" Title="[ProductName] [Setup]" NoMinimize="yes">

	<Control Id="ConfigureUDL" Property="CONFIGUREUDL" X="15" Y="51" Height="11" Width="250" Text="&amp;Configure Database Connection" Type="CheckBox" CheckBoxValue="yes" Default="yes"/>

	<Control Id="LaunchBolt" Property="LAUNCHBOLT" X="15" Y="67" Height="11" Width="250" Text="&amp;Open Bolt in a web browser" Type="CheckBox" CheckBoxValue="yes" Default="yes"/>

	<Control Id="UDLBitmap" Type="Bitmap" X="53" Y="82" Width="266" Height="149" TabSkip="yes" Text="UDL_EDITOR_EXAMPLE" />

	<Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back">
          <Publish Event="NewDialog" Value="[WixUI_UdlConfigurationPromptDialog_Back]">1</Publish>
        </Control>
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next">
          <Publish Event="NewDialog" Value="[WixUI_UdlConfigurationPromptDialog_Next]">1</Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>Do you want to configure your database settings and open Bolt in a browser?</Text>
        </Control>
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>{\WixUI_Font_Title}Data Link Configuration</Text>
        </Control>
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
      </Dialog>
    </UI>

     <Binary Id="UDL_EDITOR_EXAMPLE" src="Bitmaps/udp-warning.bmp" />

  </Fragment>
</Wix>
